<Window x:Class="PredPreySim.Gui.ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PredPreySim.Gui"
        mc:Ignorable="d"
        Title="PredPreySim details" 
        Width="1200"
        Height="400"  
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterOwner"
        WindowState="Normal"
        ShowInTaskbar="True"
        WindowStyle="None"
        AllowsTransparency="False"
        Opacity="1">
    <Border Background="#CC2B2B2B"
            CornerRadius="5"
            BorderBrush="#444"
            BorderThickness="1">
        <DockPanel>
            <!-- Custom Title Bar -->
            <Grid Height="32"
                  DockPanel.Dock="Top"
                  Background="#FF1E1E1E"
                  Name="customTitleBar">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>

                <!-- Title -->
                <TextBlock Text="Configuration" 
                           Name="titleText"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"
                           Foreground="White"
                           FontWeight="SemiBold"/>

                <!-- Minimize Button -->
                <Button Grid.Column="1"
                        Content="─"
                        FontSize="14"
                        Foreground="White"
                        Background="Transparent"
                        BorderThickness="0"
                        Name="minimizeButton"
                        Cursor="Hand"/>

            </Grid>

            <!-- Window Content -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Button Name="saveButton" Grid.Row="0" Grid.Column="0">Save</Button>
                <Button Name="loadButton" Grid.Row="0" Grid.Column="1">Load</Button>
                <ComboBox Name="navigationCombo" Grid.Row="0" Grid.Column="2">
                    <ComboBoxItem Tag="0" IsSelected="True">Free mouse navigation</ComboBoxItem>
                    <ComboBoxItem Tag="1">Follow best blue</ComboBoxItem>
                    <ComboBoxItem Tag="2">Follow best red</ComboBoxItem>
                </ComboBox>
                
                <ComboBox Name="evolveCombo" Grid.Row="0" Grid.Column="3">
                    <ComboBoxItem Tag="0">Stop evolution</ComboBoxItem>
                    <ComboBoxItem Tag="5000" IsSelected="True">Each 5k steps</ComboBoxItem>
                    <ComboBoxItem Tag="10000">Each 10k steps</ComboBoxItem>
                    <ComboBoxItem Tag="20000">Each 20k steps</ComboBoxItem>
                    <ComboBoxItem Tag="30000">Each 50k steps</ComboBoxItem>
                    <ComboBoxItem Tag="100000">Each 100k steps</ComboBoxItem>
                </ComboBox>

                <CheckBox Name="pointersCheckbox" Grid.Row="0" Grid.Column="4" IsChecked="True" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White">Pointers</CheckBox>
                
                <!-- graph controls -->
                <CheckBox Name="commonScaleCheckbox" Grid.Row="0" Grid.Column="9"  HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White">Common scale</CheckBox>
                <ComboBox Name="graphHistoryCombo" Grid.Row="0" Grid.Column="8">
                    <ComboBoxItem Tag="50">Show 50</ComboBoxItem>
                    <ComboBoxItem Tag="100" IsSelected="True">Show 100</ComboBoxItem>
                    <ComboBoxItem Tag="300">Show 300</ComboBoxItem>
                    <ComboBoxItem Tag="500">Show 500</ComboBoxItem>
                    <ComboBoxItem Tag="1000">Show 1000</ComboBoxItem>
                    <ComboBoxItem Tag="2000">Show 2000</ComboBoxItem>
                </ComboBox>


                <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="10"> <!-- graph + series selector -->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="200"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <local:FunctionGraph x:Name="statsGraph" Grid.Row="0" Grid.Column="0"/>
                    <ListBox Name="seriesList" Grid.Row="0" Grid.Column="1" SelectionMode="Single" Background="Black">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="IsSelected" Value="False"/>
                                <Setter Property="Focusable" Value="False"/>
                            </Style>
                        </ListBox.ItemContainerStyle>

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" Click="SeriesCheckBox_Click" Content="{Binding Name}" Width="100" Foreground="White" />
                                    <Line X1="0"
                                      Y1="0"
                                      X2="60"
                                      Y2="0"
                                      Margin="8,0,0,0"
                                      VerticalAlignment="Center"
                                      Stroke="{Binding Style.Stroke}"
                                      StrokeThickness="{Binding Style.StrokeThickness}"
                                      StrokeDashArray="{Binding Style.StrokeDashArray}"
                                      StrokeDashCap ="{Binding Style.LineCap}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
                
            </Grid>
        </DockPanel>
    </Border>
</Window>
